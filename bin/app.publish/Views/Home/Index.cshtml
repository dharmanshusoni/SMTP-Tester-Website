@model SMTP_Tester.Models.Mail
@{
    ViewBag.Title = "Home Page";
}
<div class="container">
    <h2>
        SMTP Test Tool
    </h2>
    <p>
        Test your connection to Sendgrid, Mailgun, Amazon SES, or any SMTP server. See the exact SMTP "conversation" to help you troubleshoot email issues.
    </p>
</div>
<div class="container">
    <h2></h2>
    <fieldset>
        <legend>
            Send Email
        </legend>
        @using (Html.BeginForm("Index", "Home", FormMethod.Post))
        {
            <div class="col-sm-6">
                <div class="form-horizontal">
                    <div class="form-group">
                        <label class="control-label col-sm-2" for="email">Host:</label>
                        <div class="col-sm-10">
                            @Html.TextBoxFor(m => m.Host, new { @class = "form-control" })
                            <small class="w-100">For gmail use smtp.gmail.com</small><br />
                            <small class="w-100">For outlook use smtp.office365.com</small>
                        </div>

                    </div>
                    <div class="form-group">
                        <label class="control-label col-sm-2" for="email">Port:</label>
                        <div class="col-sm-10">
                            @Html.TextBoxFor(m => m.Port, new { @class = "form-control" })
                            <small class="w-100">For gmail/outlook use : 587</small>
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="control-label col-sm-2" for="email">To:</label>
                        <div class="col-sm-10">
                            @Html.TextBoxFor(m => m.To, new { @class = "form-control" })
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="control-label col-sm-2" for="email">From:</label>
                        <div class="col-sm-10">
                            @Html.TextBoxFor(m => m.From, new { @class = "form-control" })
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="control-label col-sm-2" for="email">Password:</label>
                        <div class="col-sm-10">
                            @Html.PasswordFor(m => m.Password, new { @class = "form-control" })
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-sm-offset-2 col-sm-10">
                            <input type="submit" value="Send" class="btn btn-block btn-success" />
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-sm-6">
                @Html.ValidationSummary()
                <div class="row">
                    <div class="col-md-12">
                        <div class="form-group">
                            @Html.Raw(@ViewBag.Alert)
                        </div>
                    </div>
                </div>
            </div>
        }
    </fieldset>
</div>
